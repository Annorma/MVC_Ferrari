@model IEnumerable<DataAccess.Entities.Car>;

@{
    ViewData["Title"] = "Cart";
}

<div class="row justify-content-center mt-20">
    <div class="card text-center w-50">
        <div class="card-header">
            <h2 class="nm-h-b">My Cart</h2>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <h5 class="card-title">Models List</h5>

                <ul class="list-group my-3">
                    @foreach (var car in Model)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <span class="badge bg-dark">@car.Price$</span>
                                <strong>@car.Model</strong>
                            </div>
                            <a asp-controller="Cart" asp-action="Remove" asp-route-productId="@car.Id" class="btn btn-danger">Delete</a>
                        </li>
                    }
                </ul>
                <a asp-controller="Orders" asp-action="Add" class="btn btn-dark">
                    <i class="bi bi-bag-check"></i> Confirm
            </a>
            }
            else
            {
                <p class="text-black">Looks like your cart is empty</p>
                <a asp-controller="Cars" asp-action="Index" class="btn btn-outline-dark">Browse Our Store</a>
            }
        </div>
        <div class="card-footer text-muted">
            Total items: @Model.Count()
        </div>
    </div>
</div>