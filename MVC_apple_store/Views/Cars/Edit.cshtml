@model DataAccess.Entities.Car;
@{
    const string imagePlaceholderUrl = "https://thumbs.dreamstime.com/b/no-thumbnail-image-placeholder-forums-blogs-websites-148010362.jpg";
}

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center nm-h mt-20">Edit Your Car</h1>
<hr />

<div class="row justify-content-center">
<form asp-action="Edit" method="post" class="row g-3 w-50">
    <div class="col-6">
        <label asp-for="Model" class="form-label">Model</label>
        <input asp-for="Model" class="form-control">
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>
    <div class="col-6">
        <label asp-for="Price" class="form-label">Price</label>
        <input asp-for="Price" class="form-control">
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="col-6">
        <label asp-for="ColorId" class="form-label">Color</label>
        <select asp-for="ColorId" asp-items="@ViewBag.ColorList" class="form-select"></select>
        <span asp-validation-for="ColorId" class="text-black"></span>
    </div>
    <div class="col-6">
        <label asp-for="StoKMh" class="form-label">0-100 km/h</label>
        <input asp-for="StoKMh" class="form-control">
        <span asp-validation-for="StoKMh" class="text-danger"></span>
    </div>
    <div class="col-12">
        <label asp-for="Description" class="form-label">Description</label>
        <textarea class="form-control" asp-for="Description" rows="5"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="col-12">
        <div class="text-center my-2">
            <img src="@imagePlaceholderUrl" alt="Product Image" class="rounded" width="100" id="image" />
        </div>
        <label asp-for="ImagePath" class="form-label">Image URL</label>
        <input type="url" asp-for="ImagePath" class="form-control" id="image-path-input">
        <span asp-validation-for="ImagePath" class="text-danger"></span>
    </div>
    <div class="col-6">
        <a asp-action="Manage" class="btn btn-secondary w-100">Back</a>
    </div>
    <div class="col-6">
        <button type="submit" class="btn btn-primary w-100">Save Changes</button>
    </div>
</form>
</div>

@section Scripts
    {
    <script type="text/javascript">
        $("#image-path-input").change(function () {
            const value = $(this).val();
            setImage(value);
        });

        function setImage(imageUrl) {
            if (imageUrl == '') {
                imageUrl = '@imagePlaceholderUrl';
            }
            $("#image").attr('src', imageUrl);
        }
        setImage('@Model.ImagePath');
    </script>
}